@model IEnumerable<ToDoList.Models.TDList>

@{
    ViewData["Title"] = "ViewAllToDoLists";
}

<h1>ViewAllToDoLists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
