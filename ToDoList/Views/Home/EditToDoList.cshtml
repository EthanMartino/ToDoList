@model TDList

@{
    ViewData["Title"] = "Edit ToDo List Name";
}

<h1>Edit Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditToDoList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListId" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="ListTitle" class="control-label"></label>
                <input asp-for="ListTitle" class="form-control" />
                <span asp-validation-for="ListTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
