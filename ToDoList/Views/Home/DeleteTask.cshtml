@model TDTask

@{
    ViewData["Title"] = "Delete " + Model.TaskTitle;
}


    <h3>Delete @Model.TaskTitle Task</h3>
<div>
    <h4>TDTask</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteTask">
        <input type="hidden" asp-for="TaskId" />
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-action="Details" asp-route-id="@Model.ListId">Back to ToDo List</a>
    </form>
</div>
